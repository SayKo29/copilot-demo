---
import Header from "../components/Header.astro"
import Hero from "../components/Hero.astro"
import Bento from "../components/Bento.astro"
import IndustryBento from "../components/IndustryBento.astro"
import Features from "../components/Features.astro"
import Pricing from "../components/Pricing.astro"
import Table from "../components/Table.astro"
import HeroCards from "../components/HeroCards.astro"
import Asks from "../components/Asks.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Github Copilot</title>
	</head>
	<body>
	
		<Header />
		<main>
			<Hero/>
			<Bento/>
			<IndustryBento/>
			<Features/>
			<Pricing/>
			<Table/>
			<HeroCards/>
			<Asks/>
		</main>
		<Footer/>
	</body>
</html>

<style lang="scss">
	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	body {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
		margin: 0;
		padding: 0;
		background-color: #020018;
	}
</style>